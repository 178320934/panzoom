{
  "name": "@panzoom/core",
  "version": "4.0.0-pre",
  "description": "Pan and zoom elements using CSS transforms",
  "main": "dist/panzoom.js",
  "scripts": {
    "build": "yarn clean && rollup --config && yarn minify && yarn docs",
    "clean": "rm -rf dist/ docs/",
    "commit": "git-cz",
    "docs": "yarn typedoc --exclude \"test/**/*\" --out docs --theme markdown",
    "lint": "concurrently \"yarn type-check\" \"yarn tslint\" \"yarn prettier\"",
    "lint:fix": "concurrently \"yarn type-check\" \"yarn tslint --fix\" \"precise-commits\"",
    "minify": "uglifyjs --compress --mangle --output dist/panzoom.min.js -- dist/panzoom.js && yarn sizeup",
    "prettier": "prettier --check \"**/*.tsx\" \"**/*.ts\" \"**/*.js\" \"test/demo.html\"",
    "release": "semantic-release",
    "sizeup": "echo \"gzipped size: \" && gzip-size dist/panzoom.min.js",
    "start": "webpack-dev-server",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "karma start",
    "test:watch": "karma start --singleRun=false --autoWatch",
    "tslint": "tslint -p tsconfig.json -c tslint.json",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "files": [
    "MIT-License.txt",
    "panzoom.ts",
    "panzoom.d.ts",
    "dist/panzoom.js",
    "dist/panzoom.min.js",
    "README.md"
  ],
  "keywords": [
    "panzoom",
    "pan",
    "zoom",
    "draggable",
    "dragging",
    "drag"
  ],
  "repository": "timmywil/panzoom",
  "license": "MIT",
  "author": {
    "name": "Timmy Willison",
    "email": "4timmywil@gmail.com"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt": "^8.1.0",
    "@semantic-release/exec": "^3.3.5",
    "@semantic-release/git": "^7.0.16",
    "@types/mocha": "^5.2.7",
    "@types/prismjs": "^1.16.0",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.0.3",
    "commitlint": "^8.1.0",
    "concurrently": "^4.1.1",
    "css-loader": "^3.1.0",
    "gzip-size-cli": "^3.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.1",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^4.1.1",
    "mocha": "^6.2.0",
    "precise-commits": "^1.0.2",
    "prettier": "^1.18.2",
    "prismjs": "^1.17.1",
    "puppeteer": "^1.19.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.17.0",
    "rollup-plugin-typescript2": "^0.22.1",
    "semantic-release": "^15.13.18",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.15.0",
    "typedoc-plugin-markdown": "^2.0.11",
    "typescript": "^3.5.3",
    "uglify-js": "^3.6.0",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  },
  "resolutions": {
    "lodash": "^4.17.15",
    "marked": "^0.7.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "arrowParens": "always"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/prompt"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "ci": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "yarn build"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs",
            "dist",
            "panzoom.d.ts",
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ],
    "tagFormat": "${version}"
  }
}
